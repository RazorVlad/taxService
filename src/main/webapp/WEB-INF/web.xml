    <!--============================================================
      Security filter.
      1) inspector: inspector commands
      2) user: user commands
      3) commons: commands for all roles
      4) out-of-control: commands without access control
      Delimiter - space/tab
  =============================================================-->

    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>com.my.kramarenko.taxService.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>deleteUser changeUserBannedStatus allUsers changeUserRole</param-value>
        </init-param>
        <init-param>
            <param-name>inspector</param-name>
            <param-value>submitReport updateReportStatus</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>loadXML submitReport deleteReport</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>reportList editReport viewSettings</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>logout info login registration updateLocale complete
            </param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <listener>
        <listener-class>com.my.kramarenko.taxService.web.listener.ContextListener</listener-class>
    </listener>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>


</web-app>